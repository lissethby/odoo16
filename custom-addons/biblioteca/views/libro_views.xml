<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_libro_kanban" model="ir.ui.view">
        <field name="name">biblioteca.libro.kanban</field>
        <field name="model">biblioteca.libro</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile" sample="1">
                <field name="id"/>
                <field name="foto"/>
                <field name="name"/>
                <field name="estado"/>
                <field name="autor_libro_ids"/> 
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click" style="width: 200px; border-radius: 10px; overflow: hidden; border: 1px solid #e0e0e0; background-color: white;">
                            <div style="width: 100%; height: 260px; overflow: hidden; background-color: #f5f5f5; display: flex; align-items: center; justify-content: center;">
                                <t t-if="record.foto.raw_value">
                                    <img t-att-src="kanban_image('biblioteca.libro', 'foto', record.id.raw_value)" 
                                         style="width: 100%; height: 100%; object-fit: cover;"/>
                                </t>
                                <t t-else="">
                                    <i class="fa fa-book fa-5x" style="color: #bbb;"/>
                                </t>
                            </div>

                            <div style="padding: 10px; text-align: center;">
                                <div style="font-weight: bold; font-size: 1.1em; margin-bottom: 5px; color: #333; overflow: hidden; text-overflow: ellipsis; white-space: nowrap;">
                                    <field name="name"/>
                                </div>

                                 <div style="font-weight: bold; font-size: 1.1em; margin-bottom: 5px; color: #333; overflow: hidden; text-overflow: ellipsis; white-space: nowrap;">
                                    <field name="isbn"/>
                                </div>
                                
                                <div style="font-size: 0.9em; color: #666; margin-bottom: 8px; height: 20px; overflow: hidden;">
                                    <field name="autor_libro_ids" widget="many2many_tags"/>
                                </div>

                                <div>
                                    <field name="estado" widget="label_selection" options="{'classes': {'disponible': 'success', 'prestado': 'info', 'reparacion': 'warning', 'perdido': 'danger'}}"/>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="view_libro_form" model="ir.ui.view">
        <field name="name">biblioteca.libro.form</field>
        <field name="model">biblioteca.libro</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <field name="active" invisible="1"/>
                    <field name="foto" widget="image" class="oe_avatar" options='{"preview_image": "foto"}'/>
                    <div class="oe_title">
                        <label for="name" string="Título del Libro"/>
                        <h1><field name="name" placeholder="Ej. Cien años de soledad"/></h1>
                    </div>
                    <group>
                        <group string="Información Básica">
                            <field name="isbn"/>
                            <field name="editorial"/>
                            <field name="ano_publicacion"/>
                        </group>
                        <group string="Estado y Compra">
                            <field name="estado" widget="badge" decoration-success="estado == 'disponible'" decoration-info="estado == 'prestado'"/>
                            <field name="fecha_adquisicion"/>
                            <field name="precio"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Detalles y Autores">
                            <group>
                                <field name="genero_ids" widget="many2many_tags" placeholder="Seleccione géneros..."/>
                            </group>
                            <field name="autor_libro_ids">
                                <tree editable="bottom">
                                    <field name="autor_id"/>
                                    <field name="es_autor_principal"/>
                                    <field name="orden"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Sinopsis">
                            <field name="descripcion" placeholder="Escribe un resumen aquí..."/>
                        </page>
                        <page string="Historial de Préstamos">
                            <field name="prestamo_ids" readonly="1">
                                <tree>
                                    <field name="socio_id"/>
                                    <field name="fecha_prestamo"/>
                                    <field name="fecha_devolucion_prevista"/>
                                    <field name="estado"/> 
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_libro_tree" model="ir.ui.view">
        <field name="name">biblioteca.libro.tree</field>
        <field name="model">biblioteca.libro</field>
        <field name="arch" type="xml">
            <tree decoration-info="estado == 'prestado'" decoration-muted="active == False">
                <field name="active" invisible="1"/>
                
                <field name="foto" widget="image" options='{"size": [40, 40]}' string="P."/>
                <field name="name"/>
                <field name="isbn"/>
                <field name="estado" widget="badge" decoration-success="estado == 'disponible'" decoration-info="estado == 'prestado'"/>
            </tree>
        </field>
    </record>

    <record id="action_biblioteca_libro" model="ir.actions.act_window">
        <field name="name">Libros</field>
        <field name="res_model">biblioteca.libro</field>
        <field name="view_mode">kanban,tree,form</field>
    </record>
</odoo>