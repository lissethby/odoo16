<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_biblioteca_prestamo_tree" model="ir.ui.view">
        <field name="name">biblioteca.prestamo.tree</field>
        <field name="model">biblioteca.prestamo</field>
        <field name="arch" type="xml">
            <tree decoration-danger="estado == 'retrasado'" decoration-success="estado == 'devuelto'">
                <field name="name"/>
                <field name="libro_id"/>
                <field name="socio_id"/>
                <field name="fecha_prestamo"/>
                <field name="fecha_devolucion_prevista"/>
                <field name="estado" widget="badge" 
                       decoration-info="estado == 'activo'" 
                       decoration-success="estado == 'devuelto'" 
                       decoration-danger="estado == 'retrasado'"/>
            </tree>
        </field>
    </record>

    <record id="view_biblioteca_prestamo_form" model="ir.ui.view">
        <field name="name">biblioteca.prestamo.form</field>
        <field name="model">biblioteca.prestamo</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <field name="estado" widget="statusbar" statusbar_visible="activo,devuelto,retrasado"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1><field name="name"/></h1>
                    </div>
                    <group>
                        <group string="Información del Préstamo">
                            <field name="libro_id"/>
                            <field name="socio_id"/>
                        </group>
                        <group string="Fechas">
                            <field name="fecha_prestamo"/>
                            <field name="fecha_devolucion_prevista"/>
                            <field name="fecha_devolucion_real" attrs="{'invisible': [('fecha_devolucion_real', '=', False)]}"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Notas">
                            <field name="notas" placeholder="Observaciones del préstamo..."/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_biblioteca_prestamo" model="ir.actions.act_window">
        <field name="name">Préstamos</field>
        <field name="res_model">biblioteca.prestamo</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Registra el primer préstamo de un libro.
            </p>
        </field>
    </record>
</odoo>